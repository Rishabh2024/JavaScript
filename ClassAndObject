class RailwayForm{
  submit(){
    alert(this.name + ":your form is submitted for train number: " + this.trainno)
  }
  cancel(){
    alert(this.name + ":this form is cancelled  for train number: " + this.trainno)
  }
  fill(givenname, trainno){
    this.name=givenname
    this.trainno=trainno
  }
}
// create a form for Rishabh
let RishabhForm=new RailwayForm()
// fill the form with Rishabh details
RishabhForm.fill("Rishabh",12417)

// create a form for Ravi
let RaviForm=new RailwayForm()
// fill the form with Ravi details
RaviForm.fill("Ravi",12418)
RishabhForm.submit()
RaviForm.submit()
RaviForm.cancel()
